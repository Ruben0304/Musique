<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/_000x1000" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C3000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/label"
        android:layout_width="172dp"
        android:layout_height="27dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_light"
        android:foregroundTint="#FF98A9"
        android:text="Escuchando ahora"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/cardPoster"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/cardPoster"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_ionic_ios_volume_high" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPoster"
        android:layout_width="298dp"
        android:layout_height="372dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.94">

        <ImageView
            android:id="@+id/coverSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            android:src="@drawable/_000x1000" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="304dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_light"
        android:foregroundTint="#FF98A9"
        android:singleLine="true"
        android:text="Eladio CarrionEladio CarrionEladio CarrionEladio Carrion"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardPoster" />

    <TextView
        android:id="@+id/txtArtista"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_light"
        android:foregroundTint="#FF98A9"
        android:text="Eladio Carrion"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#A9EEEEEE"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>